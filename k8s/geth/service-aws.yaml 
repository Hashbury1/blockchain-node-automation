apiVersion: v1
kind: Service
metadata:
  name: geth-service
  namespace: eth-nodes
  labels:
    app: geth
  annotations:
    service.beta.kubernetes.io/aws-load-balancer-type: "nlb"
    service.beta.kubernetes.io/aws-load-balancer-scheme: "internet-facing"
    service.beta.kubernetes.io/aws-load-balancer-cross-zone-load-balancing-enabled: "true"
    prometheus.io/scrape: "true"
    prometheus.io/port: "6060"
spec:
  type: LoadBalancer
  selector:
    app: geth
  ports:
  - name: http-rpc
    port: 8545
    targetPort: 8545
    protocol: TCP
  - name: ws-rpc
    port: 8546
    targetPort: 8546
    protocol: TCP
  - name: metrics
    port: 6060
    targetPort: 6060
    protocol: TCP
  - name: p2p
    port: 30303
    targetPort: 30303
    protocol: TCP
  sessionAffinity: ClientIP